<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="themedColorPrimary">@color/colorPrimary</item>
        <item name="themedColorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="themedColorAccent">@color/colorAccent</item>

        <item name="colorPrimary">?themedColorPrimary</item>
        <item name="colorPrimaryDark">?themedColorPrimaryDark</item>
        <item name="colorAccent">?themedColorAccent</item>
    </style>

    <style name="AppTheme.Night" parent="AppTheme">
        <item name="themedColorPrimary">@color/colorNightPrimary</item>
        <item name="themedColorPrimaryDark">@color/colorNightPrimaryDark</item>
        <item name="themedColorAccent">@color/colorNightAccent</item>
        <item name="themedColorForeground">@color/colorNightForeground</item>
        <item name="themedColorForegroundSecondary">@color/colorNightForeground</item>
        <item name="themedColorBackground">@color/colorNightBackground</item>

        <item name="android:windowBackground">?themedColorBackground</item>
        <item name="android:textColor">?themedColorForeground</item>
        <item name="android:textColorPrimary">?themedColorForeground</item>
        <item name="android:textColorSecondary">?themedColorForegroundSecondary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">?themedColorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">?themedColorForeground</item>
        <item name="android:textColorSecondary">?themedColorForegroundSecondary</item>
    </style>

    <style name="DSObjectLabelTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="DSObjectTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="LocCategoryTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textColor">#FF80CBC4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">6dp</item>-->
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textColorSecondary">#CCCCCC</item>
    </style>

    <style name="LocLabelTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="LocTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">6dp</item>
    </style>

